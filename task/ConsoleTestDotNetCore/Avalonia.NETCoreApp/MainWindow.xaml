<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.NETCoreApp.MainWindow"
        Title="Avalonia.NETCoreApp"
        WindowState="Maximized">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical" Width="300">
            <Button Name="StartBtn">Start</Button>
            <Button Name="StopBtn">Stop</Button>
            <Button Name="GenerateBtn">Generate</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" MaxWidth="1000">
            <Button Name="GreetButton" Click="GreetButton_Click">Say Hello!</Button> 
            <!-- Add event GreetButton_Click to button, when we click to button event run -->
            <Image Name="Cat" IsVisible="True" Width="1000" Height="1000"></Image>
        </StackPanel>
    </StackPanel>
    
</Window>
